<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <!-- Header with selected count and add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/selected_apps_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="?attr/greyText"
            android:text="@string/selected_apps_count" />

        <Button
            android:id="@+id/add_apps_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_apps" />
    </LinearLayout>

    <!-- RecyclerView for selected apps only -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_apps_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:nestedScrollingEnabled="false" />

    <!-- Empty state message -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/no_apps_selected"
        android:textSize="14sp"
        android:textColor="?attr/greyText"
        android:gravity="center"
        android:visibility="gone" />

</LinearLayout>
